<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link href="/stylesheets/site.css" type="text/css" rel="stylesheet">
    <link rel='shortcut icon' type='image/x-icon' href='/images/favicon.png' />
</head>

<body>
    <div class="container">
        {{#if user}}
        {{>headerAuth}}
        {{else}}
        {{>headerGuest}}
        {{/if}}
        {{#if errors}}
            <div id="notifications">
                {{#each errors}}
                <p id="notification-message">{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        {{{body}}}
    </div>
    {{>footer}}
</body>

</html>